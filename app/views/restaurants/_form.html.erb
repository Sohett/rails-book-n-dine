<%= simple_form_for([@restaurant]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :municipality %>
    <%= f.input :capacity %>
    <%= f.input :address %>
    <%= f.input :category %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
